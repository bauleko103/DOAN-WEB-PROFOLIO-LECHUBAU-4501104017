@model IEnumerable<NATURALLIFE.Models.DSKHACHHANG>

@{
    ViewBag.Title = "LISTCONTACTVIEW";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>THÔNG TIN KHÁCH HÀNG</h3>
        <div class="col-lg-12">
            <div class="content-panel">
                <div style="margin:10px;">
                    <button class="btn btn-success btn-primary">
                        <i class="fa fa-check"></i>
                        @Html.ActionLink("ADD", "TINTUCADD")
                    </button>
                </div>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th class="hidden-phone"><i class="fa "></i>TÊN KHÁCH HÀNG</th>
                            <th class="hidden-phone"><i class="fa "></i>GMAIL</th>
                            <th>CHỈNH SỬA</th>
                            <th>XOÁ</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tbody>
                            <tr>
                                <td>
                                    <p>@Html.DisplayFor(modelItem => item.TENKH)</p>
                                </td>
                                <td>
                                    <P>@Html.DisplayFor(modelItem => item.GMAIL)</P>
                                </td>
                                <td>
                                    <button class="btn btn-info btn-arrow" style="margin:5px;">
                                        @Html.ActionLink("EDIT", "LISTCONTACTEDIT", new { id = item.ID })
                                    </button>
                                </td>
                                <td>
                                    <!---nút xoá-->
                                    <div >
                                        <!-- Button trigger modal -->
                                        <button class="btn btn-danger btn-primary" data-toggle="modal" data-target="#myModal">
                                            DELETE
                                        </button>
                                        <!-- Modal -->
                                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                        <h4 class="modal-title" id="myModalLabel">
                                                            WARNING !
                                                        </h4>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you continue to delete this item?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button class="btn btn-danger btn-primary" style="margin:5px;">
                                                            <i class="fa fa-trash-o "></i> @Html.ActionLink("DEL", "LISTCONTACTDEL", new { id = item.ID })
                                                        </button>
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- /kết thúc nút xoá -->
                                    
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
    </section>
    <!-- /wrapper -->
</section>
