@model NATURALLIFE.Models.THELOAITINTUC

@{
    ViewBag.Title = "THELOAITINTUCEDIT";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

@using (Html.BeginForm("THELOAITINTUCEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDTHELOAI)
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="col-lg-6">
                <div class="content-panel">
                    @*<img src="~/Content/img/@Html.DisplayFor(modelItem => item.BGIMAGE)" style="width:100%;" />*@
                    <img src="~/Content/images-slider/img-slide-1.jpg" style="width:100%;" />
                    <!-- /content-panel -->
                </div>
            </div>
            <div class="col-lg-6">
                <div class="content-panel">

                    <h4><i class="fa fa-dashboard"></i>THỂ LOẠI ẢNH</h4>
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <thead>
                                <tr>
                                    <th class="hidden-phone"><i class="fa "></i>THỂ LOẠI ẢNH</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="col-lg-10">
                                        @Html.EditorFor(model => model.TENTHELOAI, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TENTHELOAI, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                    <button type="submit" class="btn btn-theme start">
                        <i class="glyphicon glyphicon-save"></i>
                        <span>Save</span>
                    </button>
                    <button type="button" class="btn btn-theme04 delete">
                        <i class="glyphicon glyphicon-arrow-left"></i>
                        <span>@Html.ActionLink("BACK", "THELOAITINTUCVIEW")</span>
                    </button>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
}