@model NATURALLIFE.Models.LOGOKHACHHANG

@{
    ViewBag.Title = "CLIENTEDIT";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}


@using (Html.BeginForm("CLIENTEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CLIENT</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <section id="main-content">
            <section class="wrapper">
                <!-- BASIC FORM ELELEMNTS -->
                <div class="col-lg-12">
                    <div class="content-panel">
                        <h4><i class="fa fa-dashboard"></i> Chỉnh Sửa Nội Dung CLIENT</h4>
                        <section id="unseen">
                            <table class="table table-bordered table-striped table-condensed">
                                <tbody>
                                    <tr>
                                        <td class="col-lg-2">HÌNH ẢNH LOGO (vui lòng chọn ảnh có kích thước 87x87px)</td>
                                        <td class="col-lg-10">
                                            @Html.LabelFor(model => model.HINHANH, new { @class = "form-control" })
                                            <input type="file" name="HINHANHFile"  />
                                        </td>

                                    </tr>
                                    <tr>
                                        <td class="col-lg-2">LINK LOGO</td>
                                        <td class="col-lg-10">
                                            @Html.EditorFor(model => model.LINKLOGO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.LINKLOGO, "", new { @class = "text-danger" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="col-lg-2">TÊN LOGO</td>
                                        <td class="col-lg-10">
                                            @Html.EditorFor(model => model.TENLOGO, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TENLOGO, "", new { @class = "text-danger" })
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                            <button type="submit" class="btn btn-theme start">
                                <i class="glyphicon glyphicon-save"></i>
                                <span>SAVE</span>
                            </button>
                            <button type="button" class="btn btn-theme04 delete">
                                <i class="glyphicon glyphicon-arrow-left"></i>
                                <span>@Html.ActionLink("BACK", "CLIENTVIEW")</span>
                            </button>


                        </section>
                    </div>
                    <!-- /content-panel -->
                </div>
                <!-- /row -->
            </section>
            <!-- /wrapper -->
        </section>
   
    </div>
}
