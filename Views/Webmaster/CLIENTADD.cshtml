@model NATURALLIFE.Models.LOGOKHACHHANG
@{
    ViewBag.Title = "CLIENTADD";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}


@using (Html.BeginForm("CLIENTADD", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="col-lg-6">
                <div class="content-panel">
                    <h4><i class="fa fa-dashboard"></i> THÔNG TIN LOGO KHÁCH HÀNG</h4>
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td class="col-lg-2">IMAGE LOGO</td>
                                    <td class="col-lg-10">
                                        @Html.LabelFor(model => model.HINHANH, new { @class = "form-control" })
                                        <input type="file" name="HINHANHFile" required />
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-lg-2">LINK LOGO</td>
                                    <td class="col-lg-10">
                                        @Html.EditorFor(model => model.TENLOGO, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TENLOGO, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-lg-2">NAME LOGO</td>
                                    <td class="col-lg-10">
                                        @Html.EditorFor(model => model.LINKLOGO, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.LINKLOGO, "", new { @class = "text-danger" })
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-theme start" value="Create">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>ADD</span>
                        </button>
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span>@Html.ActionLink("BACK", "CLIENTVIEW")</span>
                        </button>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
}