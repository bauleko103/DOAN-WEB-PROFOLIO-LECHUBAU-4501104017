@model NATURALLIFE.Models.TRANGMODEL

@{
    ViewBag.Title = "MODELADD";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

@using (Html.BeginForm("MODELADD", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <!-- row -->

            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-dashboard"></i> ADD MODEL</h4>
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                @Html.ValidationSummary(true)
                                <tr>
                                    <td>TITLE</td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.TUADE, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.TUADE, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>CONTENT</td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.NOIDUNG, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                                <tr>
                                    <td>IMAGE</td>
                                    <td>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.LabelFor(model => model.HINHANH, new { @class = "form-control" })
                                                <input type="file" name="HINHANHFile" required />
                                            </div>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-theme start" value="Create">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>ADD</span>
                        </button>
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span>@Html.ActionLink("BACK", "MODELVIEW")</span>
                        </button>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
}





