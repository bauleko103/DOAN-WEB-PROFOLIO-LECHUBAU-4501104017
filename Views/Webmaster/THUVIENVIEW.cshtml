@model IEnumerable<NATURALLIFE.Models.THUVIENANH>

    @{
        ViewBag.Title = "THUVIENVIEW";
        Layout = "~/Views/Shared/_Webmaster.cshtml";
    }
    
   
    <!-- /MAIN CONTENT -->
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <h3><i class="fa fa-angle-right"></i>THƯ VIỆN ẢNH</h3>
            <div class="col-lg-6">
                <div class="content-panel">
                    @*<img src="~/Content/img/@Html.DisplayFor(modelItem => item.BGIMAGE)" style="width:100%;" />*@
                    
                    <img src="~/ContentWebmaster/img/GALLARYVIEW.png"style="width:100%;" />
                    <!-- /content-panel -->
                </div>
                <br />
                <div>
                    <button class="btn btn-success btn-primary"><i class="fa fa-check"></i> @Html.ActionLink("ADD", "THUVIENADD")</button>
                </div>
            </div>
            <br />
            <!-- row -->
            @using (Html.BeginForm())
            {
                <table>
                    <tr>
                        <td style="padding:10px;">
                            @Html.DropDownList("IDTHELOAI", null, htmlAttributes: new { @class = "form-control" })
                        </td>

                        <td>
                            <input type="submit" value="Tìm kiếm" />
                        </td>
                    </tr>
                   
                </table>
            }
            <br />
            @foreach (var item in Model)
            {
                <div class="col-lg-6">
                        <div class="content-panel">
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th class="hidden-phone"><i class="fa "></i>THỂ LOẠI ẢNH</th>
                                        <th class="hidden-phone"><i class="fa "></i>ẢNH</th>
                                        <th>CHỈNH SỬA</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <P>@Html.DisplayFor(modelItem => item.THELOAITHUVIEN.THELOAIANH)</P>
                                        </td>
                                        <td>
                                            <img src="~/ContentWebmaster/img/@Html.DisplayFor(modelItem => item.HINHANH)" style="width:60px;" />
                                            <br>
                                        </td>
                                        <td>
                                            <button class="btn btn-info btn-arrow" style="margin:5px;">
                                                @Html.ActionLink("EDIT", "THUVIENEDIT", new { id = item.ID })
                                            </button>
                                        </td>
                                </tbody>

                            </table>
                        </div>
                        <!---nút xoá-->
                        <div class="showback">
                            <!-- Button trigger modal -->
                            <button class="btn btn-danger btn-primary" data-toggle="modal" data-target="#myModal">
                                DELETE
                            </button>
                            <!-- Modal -->
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">
                                                WARNING !
                                            </h4>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you continue to delete this item?
                                        </div>
                                        <div class="modal-footer">
                                            <button class="btn btn-danger btn-primary">
                                                <i class="fa fa-trash-o "></i> @Html.ActionLink("DEL", "THUVIENDEL", new { id = item.ID })
                                            </button>
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
           
                        <!-- /kết thúc nút xoá -->
                    <!-- /content-panel -->
                </div>
            }

            <!-- /row -->
        </section>
    </section>
