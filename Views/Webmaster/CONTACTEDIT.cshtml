@model NATURALLIFE.Models.LIENHE


@{
    ViewBag.Title = "CONTACTEDIT";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

@using (Html.BeginForm("CONTACTEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class="wrapper">
            <div class="col-lg-6">
                <div class="content-panel">
                    <h4><i class="fa fa-dashboard"></i> Chỉnh Sửa Nội Dung Liên Hệ</h4>
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ID)
                                <tr>
                                    <td>TỰA ĐỀ CHÂN TRANG</td>
                                    <td>
                                        @Html.EditorFor(model => model.TUADE, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TUADE, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>ĐỊA CHỈ  (vui lòng nhập dưới 50 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.ADDRESSS, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ADDRESSS, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>SỐ ĐIỆN THOẠI</td>
                                    <td>
                                        @Html.EditorFor(model => model.PHONE, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>FAX</td>
                                    <td>
                                        @Html.EditorFor(model => model.FAX, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.FAX, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>EMAIL</td>
                                    <td>
                                        @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>WEB</td>
                                    <td>
                                        @Html.EditorFor(model => model.WEB, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.WEB, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>CHÚ THÍCH  (vui lòng nhập dưới 20 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.TUADECHANTRANG, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TUADECHANTRANG, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>HOTLINE</td>
                                    <td>
                                        @Html.EditorFor(model => model.HOTLINE, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.HOTLINE, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-theme start">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>Save</span>
                        </button>
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span> @Html.ActionLink("BACK", "CONTACTVIEW")</span>
                        </button>
                    </section>
                </div>
            </div>
        </section>
    </section>
}
