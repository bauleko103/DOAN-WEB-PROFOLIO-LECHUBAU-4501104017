@model NATURALLIFE.Models.HOME

@{
    ViewBag.Title = "HOMEEdit";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}
   
@using (Html.BeginForm("HOMEEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class="wrapper">
            @*khai bao bien*@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)
            <!-- BASIC FORM ELELEMNTS -->
            <!-- row -->
            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-dashboard"></i> Chỉnh Sửa Nội Dung Trang Chủ</h4>
                    <section id="unseen">
                        @Html.ValidationSummary(true)
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td>Tiêu Đề Lớn (vui lòng nhập dưới 200 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.TUADE1, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TUADE1, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Chữ Thay Đổi Lần 1 (vui lòng nhập dưới 200 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.TUADE2, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TUADE2, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Chữ Thay Đổi Lần 2 (vui lòng nhập dưới 200 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.TUADE3, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TUADE3, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>Button (vui lòng nhập dưới 200 kí tự)</td>
                                    <td>
                                        @Html.EditorFor(model => model.TENNUT, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TENNUT, "", new { @class = "text-danger" })

                                    </td>
                                </tr>
                                <tr>
                                    <td>Hình Ảnh (vui lòng nhập dưới 200 kí tự)</td>

                                    <td>
                                        
                                        @Html.LabelFor(model => model.HINHANHNEN, new { @class = "form-control" })
                                        <input type="file" name="HINHANHNENFile" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        @*<input type="submit" value="Upload" class="btn btn-theme start" />*@
                        <button type="submit" class="btn btn-theme start">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>SAVE</span>
                        </button>
                        
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span>@Html.ActionLink("Back", "HOMEVIEW")</span>
                        </button>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
        </section>

        <!-- /wrapper -->
    </section>

}
