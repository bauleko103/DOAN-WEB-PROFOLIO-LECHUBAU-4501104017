@model NATURALLIFE.Models.TRANGMODEL


@{
    ViewBag.Title = "MODELEDIT";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

<script src="~/ContentWebmaster/ckeditor/ckeditor.js"></script>
@using (Html.BeginForm("MODELEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <section id="main-content">
        <section class="wrapper">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID)

            <!-- BASIC FORM ELELEMNTS -->
            <div class="col-lg-12">
                <div class="content-panel">
                    <h4><i class="fa fa-dashboard"></i> Chỉnh Sửa Nội Dung Chi Tiết MODEL</h4>
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td>TITlE</td>
                                    <td>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.TUADE, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.TUADE, "", new { @class = "text-danger" })
                                        </div>
                                    </td>
                                </tr>
                                <tr>

                                    <td>CONTENT</td>
                                    <td>
                                        <div class="col-md-10">
                                            @Html.TextAreaFor(model => model.NOIDUNG, new { @id = "FullDescription", @class = "form-control", @rows = "200" })
                                            <script>
                                                CKEDITOR.replace("FullDescription");
                                            </script>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Hình Ảnh</td>
                                    <td>
                                        <div class="col-md-10">
                                            @Html.LabelFor(model => model.HINHANH, new { @class = "form-control" })
                                            <input type="file" name="HINHANHFile" />
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-theme start">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>Save</span>
                        </button>
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span>@Html.ActionLink("BACK", "MODELVIEW")</span>
                        </button>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
}



