@model IEnumerable<NATURALLIFE.Models.TRANGMODEL>
@{
    ViewBag.Title = "MODELVIEW";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

<script src="~/ContentWebmaster/ckeditor/ckeditor.js"></script>


<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>TRANG MODEL</h3>
        <!-- ADD-DEL -->
        <div style="margin:10px;">
                <button class="btn btn-success btn-primary">
                    <i class="fa fa-check"></i>
                    @Html.ActionLink("ADD", "MODELADD")
                </button>
            </div>
        <!-- row -->
        <br />
        <div class="col-lg-6 content-panel">
            
            <img src="~/ContentWebmaster/img/MODELVIEW.png"  style="width:100%;" />
        </div>
        <!-- /row -->
        <br />

        <div class="col-lg-6">
            @foreach (var item in Model)
            {
                <div class="content-panel">
                    <div class="col-lg-10" style="margin:10px;">
                        <button class="btn btn-info btn-arrow">
                            @Html.ActionLink("EDIT", "MODELEDIT", new { id = item.ID })
                        </button>
                        @*<button class="btn btn-danger btn-primary">
                                <i class="fa fa-trash-o "></i>
                                @Html.ActionLink("DEL", "MODELDELETE", new { id = item.ID })

                            </button>*@
                    </div>
                    <section id="unseen">
                        @*<button>@Html.CheckBox("isNewlyEnrolled", true)</button>*@
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                <tr>
                                    <td class="col-lg-2">TIÊU ĐỀ </td>
                                    <td class="col-lg-10">
                                        @Html.DisplayFor(modelItem => item.TUADE)
                                        @Html.ValidationMessageFor(modelItem => item.TUADE, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-lg-2">NÔI DUNG </td>
                                    <td class="col-lg-10">
                                        @Html.Raw(item.NOIDUNG)
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-lg-2">HÌNH ẢNH</td>
                                    <td class="col-lg-10">
                                        <img src="~/ContentWebmaster/img/@Html.DisplayFor(modelItem => item.HINHANH)" style="width:80px;">
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </section>
                </div>
                <br />
            }
        </div>
        <!-- /row END -->
    </section>
    <!-- /wrapper -->
</section>


