@model NATURALLIFE.Models.PHOTO

@{
    ViewBag.Title = "PHOTOEDIT";
    Layout = "~/Views/Shared/_Webmaster.cshtml";
}

@using (Html.BeginForm("PHOTOEDIT", "Webmaster", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="col-lg-8">
                <div class="content-panel">
                    <section id="unseen">
                        <table class="table table-bordered table-striped table-condensed">
                            <tbody>
                                
                                <tr>
                                    <td class="col-lg-3">
                                        SỐ THỰ TỰ 
                                    </td>
                                    <td class="col-lg-9">
                                        @Html.EditorFor(model => model.SOTHUTU, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SOTHUTU, "", new { @class = "text-danger" })
                                    </td>
                                </tr>
                                <tr>

                                    <td class="col-lg-2">HÌNH ẢNH (vui lòng chọn ảnh 57x57 pixel) </td>
                                    <td class="col-lg-10">
                                        @Html.LabelFor(model => model.HINHANH, new { @class = "form-control" })
                                        <input type="file" name="HINHANHFile" required/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <button type="submit" class="btn btn-theme start">
                            <i class="glyphicon glyphicon-save"></i>
                            <span>Save</span>
                        </button>
                        <button type="button" class="btn btn-theme04 delete">
                            <i class="glyphicon glyphicon-arrow-left"></i>
                            <span>@Html.ActionLink("BACK", "PHOTOVIEW")</span>
                        </button>
                    </section>
                </div>
                <!-- /content-panel -->
            </div>
            <!-- /row -->
        </section>
        <!-- /wrapper -->
    </section>
}